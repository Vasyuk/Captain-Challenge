<script>


  $('#remakeQuiz').click(function(){
    cleanResponses()
    navigation_loading("begin",null,null)
  })

  $(".rate_training a").each(function(event) {
    $(this).click(function(){
      $("#goTraining").prop('disabled', false)
      rates($(this).index())
    })
  })

  function rates(index){
    count_star = index + 1
    for(i=0;i<=5;i++ ){
        $(".rate_training a:eq("+i+")").find("svg").attr('class',"fal fa-star")
    }
    for(i=0;i<=index;i++ ){
        $(".rate_training a:eq("+i+")").find("svg").attr('class',"fas fa-star")
    }
  }

</script>
