<h2>Création d'un compte</h2>

<%= form_for(resource, as: resource_name, class: "form-group" ,url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-6">
      <%= label_tag(:name, "Email") %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= label_tag(:name, "Mot de passe") %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= label_tag(:name, "Confirmer le mot de passe") %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="col-md-12">
      <%= f.submit "Création", class:"btn btn-primary margin_10" %>
    </div>
  </div>
<% end %>
