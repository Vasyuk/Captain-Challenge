<p class="h2 text-center">Modifier l'utilisateur</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),class: "form-group", html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-6">
      <%= label_tag(:name, "Email") %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= label_tag(:name, "Mot de passe") %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= label_tag(:name, "Confirmer le mot de passe") %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= label_tag(:name, "Mot de passe actuel") %>
      <%= f.password_field :current_password, autocomplete: "current-password" , class: "form-control"%>
    </div>

    <div class="col-md-12">
      <%= f.submit "Mettre Ã  jour",class:"btn btn-primary margin_10" %>
    </div>
  </div>
<% end %>
